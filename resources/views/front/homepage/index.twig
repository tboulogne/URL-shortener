{% extends 'front.template.homepage' %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<div class="well" style="margin-top:100px">
					<div class="row">
						<div class="col-lg-12 text-center">
							<img src="{{url_to('/')}}/images/logo.png" >
							<br/>
							<br/>
							Generate your Linkedin to <b>JSON API</b> just in second!
							<hr/>
						</div>
					</div>
					{% if session_has('errors') %}
						<div class="alert alert-danger">
							{% for e in session_get('errors').all %}
								{{e}}<br/>
							{% endfor %}
						</div>
					{% endif %}
					{{form_open({'url':url_route('user.signin')})|raw}}
						<div class="form-group">
							<label for="email">Email address</label>
							{{form_text('email', null, {'class':'form-control', 'id':'email'})|raw}}
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							{{form_password('password', {'class':'form-control', 'id':'password'})|raw}}
						</div>
						<div class="form-group">
							{{form_submit('Signin', {'class':'btn btn-default'})|raw}}
							<a href="{{url_route('homepage')}}" class="btn btn-danger">Cancel</a>
							&nbsp;&nbsp;&nbsp; <a href="{{url_route('signup.index')}}">Sign up as new User</a>
						</div>
					{{form_close()|raw}}
				</div>
			</div>
		</div>
	</div>
{% endblock %}