{% extends 'front.template.homepage' %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<div class="well" style="margin-top:50px">
					<div class="row">
						<div class="col-lg-12">
							<div class="page-header">
								<h2>Signup</h2>
							</div>
						</div>
					</div>
					{% if session_has('errors') %}
						<div class="alert alert-danger">
							{% for e in session_get('errors').all %}
								{{e}}<br/>
							{% endfor %}
						</div>
					{% endif %}

					{{form_open({'url':url_route('signup.store')})|raw}}
						<div class="form-group">
							<label for="name">Your Name</label>
							{{form_text('name', null, {'class':'form-control', 'id':'name'})|raw}}
						</div>
						<div class="form-group">
							<label for="email">Email address</label>
							{{form_text('email', null, {'class':'form-control', 'id':'email'})|raw}}
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							{{form_password('password', {'class':'form-control', 'id':'password'})|raw}}
						</div>
						<div class="form-group">
							<label for="password_confirmation">Password Confirmation</label>
							{{form_password('password_confirmation', {'class':'form-control', 'id':'password_confirmation'})|raw}}
						</div>
						<div class="form-group">
							{{form_submit('Signup', {'class':'btn btn-default'})|raw}}
							&nbsp;&nbsp;&nbsp; <a href="{{url_route('homepage')}}">Sign in</a>
						</div>
					{{form_close()|raw}}
				</div>
			</div>
		</div>
	</div>
{% endblock %}